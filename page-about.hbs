{{!< default}}

{{#post}}

<header class="fixed-nav">
    {{> "main-header"}}
</header>

<main class="content scrollable-content about-page" role="main">
    <article class="{{post_class}}">

        <header class="post-header">
            <h1 class="post-title">{{title}}</h1>
        </header>

        <section class="post-content">
            {{content}}
        </section>

    </article>
</main>
{{/post}}
